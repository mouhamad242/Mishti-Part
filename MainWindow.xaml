<Window x:Class="ProjectManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Management System" Height="450" Width="800">

    <DockPanel>
        <!-- Sidebar -->
        <StackPanel DockPanel.Dock="Left" Width="150" Background="LightGray">
            <TextBlock Text="Menu" FontWeight="Bold" FontSize="18" Margin="10"/>
            <Button Content="Projects" Click="OpenProjectPage" Margin="10"/>
        </StackPanel>

        <!-- Main Content Frame -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>

</Window>
